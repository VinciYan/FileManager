<Window x:Class="FileManager.Views.CreateFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新建文件夹" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="请输入文件夹名称：" Margin="0,0,0,5"/>
        <TextBox x:Name="FolderNameTextBox" Grid.Row="1" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" Width="60" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="取消" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 