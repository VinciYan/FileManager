<Window x:Class="FileManager.Views.CreateFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新建文件" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="文件名：" VerticalAlignment="Center"/>
        <TextBox x:Name="FileNameTextBox" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="后缀名：" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="ExtensionTextBox" Grid.Row="1" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="MinIO链接：" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="MinioUrlTextBox" Grid.Row="2" Grid.Column="1" Margin="5,5,0,5"/>

        <TextBlock Text="备注：" Grid.Row="3" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="NotesTextBox" Grid.Row="3" Grid.Column="1" 
                 Margin="5,5,0,5" Height="100"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" Width="60" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Content="取消" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 